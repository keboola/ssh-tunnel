{
    "name": "keboola/ssh-tunnel",
    "description": "Simple library for SSH tunneling",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "keboola",
            "email": "devel@keboola.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "symfony/process": "^4.2"
    },
    "require-dev": {
        "keboola/coding-standard": "^6.0",
        "phpunit/phpunit": "^7.0",
        "phpstan/phpstan": "^0.10.6"
    },
    "autoload": {
        "psr-4": {
            "Keboola\\": "src/Keboola/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Keboola\\SSHTunnel\\Tests\\": "tests/Keboola/SSHTunnel/"
        }
    },
    "scripts": {
        "tests": "./vendor/bin/phpunit",
        "phpstan": "phpstan analyse --no-progress --level=max ./src ./tests",
        "phpcs": "phpcs -n -s --ignore=vendor --extensions=php .",
        "phpcbf": "phpcbf -n --ignore=vendor --extensions=php .",
        "build": [
            "@phpcs",
            "@phpstan",
            "@tests"
        ],
        "ci": [
            "@composer install",
            "@composer validate --no-check-all --strict",
            "@tests"
        ]
    },
    "config": {
        "sort-packages": true
    }
}
